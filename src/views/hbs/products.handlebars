  {{/if}}
  <br />
  <br />

  {{#each productos}}

    <div class="tarjeta">
      <span style="font-weight:bold"> code : {{this.code}}</span>
      categor√≠a :
      {{this.categoria}}
      <br />
      description :
      {{this.description}}
      <br />
      price :
      {{this.price}}
      stock :
      {{this.stock}}
      <br />
      <br />
      <div style="display:inline">
        Cantidad :
        <input id="txtcantpedido" type="number" />
